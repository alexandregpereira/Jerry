<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <br.alexandregpereira.jerry.app.widgets.RoundTextView
        android:id="@+id/countTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />

    <br.alexandregpereira.jerry.app.widgets.RoundTextView
        android:id="@+id/percentageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x_small"
        app:layout_constraintEnd_toStartOf="@id/countTextView"
        app:layout_constraintTop_toTopOf="@id/countTextView"
        tools:text="100" />

    <br.alexandregpereira.jerry.app.widgets.RoundTextView
        android:id="@+id/scaleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_small"
        android:layout_marginBottom="@dimen/small"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/countTextView"
        app:layout_constraintTop_toBottomOf="@id/percentageTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
